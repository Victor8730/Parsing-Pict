<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Parsing images file">
    <meta name="author" content="Victor Galiuzov">
    <link rel="icon" href="/img/favicon.ico">
    <title>Parsing pictures</title>
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/form-validation.css" rel="stylesheet">
    <link href="/css/font-awesome.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
<header>
    <div class="bg-dark collapse" id="navbarHeader">
        <div class="container">
            <div class="row">
                <div class="col-md-12 py-2">
                    <h4 class="text-white">Parsing pictures</h4>
                    <ul>
                        <li class="text-white">Auto download images from the site</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="navbar navbar-dark bg-dark box-shadow">
        <div class="container d-flex justify-content-between">
            <a href="/" class="navbar-toggler" title="Home">
                <i class="fa fa-home fa-2x" aria-hidden="true"></i>
            </a>
            <div class="btn-group navbar-toggler">

                <button type="button" class="btn btn-secondary dropdown-toggle"
                        data-target="#openDropDown"
                        data-toggle="dropdown"
                        aria-haspopup="true"
                        aria-expanded="false">
                    <span class="text-white">Download type</span>
                </button>
                <div class="dropdown-menu" id="openDropDown">
                    <a class="dropdown-item" href="/url/index">download all pict from url</a>
                    <a class="dropdown-item" href="/nastol/index">download from nastol.com.ua</a>
                    <a class="dropdown-item" href="#">Something else here</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">In progress</a>
                </div>
            </div>
            <button class="navbar-toggler tooltip-show" type="button" title="Show info" data-toggle="collapse"
                    data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="true"
                    aria-label="Toggle navigation">
                <i class="fa fa-info-circle fa-2x mr-4" aria-hidden="true"></i>
            </button>
        </div>
    </div>
</header>
<div class="container">
    <div class="col-md-12 my-1">
        <div class="info-block" style="height: 50px;">

        </div>
    </div>

    <div class="row content">
        {% block content %}
        {% endblock %}
    </div>

    <footer class="my-5 pt-5 text-muted text-center text-small">
        <p class="mb-1">&copy; 2020 Webpagestudio</p>
        <p class="mb-1">ver. {{ constant('Core\\Base::VERSION') }}</p>
    </footer>
</div>

<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.js"></script>
<script src="/js/bootstrap.bundle.js"></script>
<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            let forms = document.getElementsByClassName('needs-validation');
            let validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
    $(function () {
        $('[data-toggle="tooltip"],.tooltip-show').tooltip({'placement': 'bottom'});
    });
    function showAlert(message, type) {
        $('.info-block').append('<div class="alert alert-' + type + '" role="alert">' + message + '</div>');
        setTimeout(function () {
            $(".alert").alert('close');
        }, 3000);
    }
</script>
</body>
</html>